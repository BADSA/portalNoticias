%h2 Sign up
.well.sign_up_form
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      %label.control-label Nombre
      = f.text_field_tag :name, :class => "form-control", maxlength: "60", autofocus: true
    .form-group
      %label.control-label Correo
      = f.email_field_tag :email, :class => "form-control", maxlength: "60"
    .form-group
      %label.control-label Contrasena
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, :class => "form-control", autocomplete: "off"
    .form-group
      %label.control-label Confirmacion_de_contrasena
      = f.password_field :password_confirmation, :class => "form-control", autocomplete: "off"
    .actions
      = f.submit "Registrar", :class => "btn btn-default final-button"
  = render "devise/shared/links"