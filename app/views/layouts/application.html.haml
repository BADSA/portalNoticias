!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Portal de Noticias"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"


  %body
    .navbar.navbar-default.navbar-static-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:id=> 'Home',:href=>'/'} PortalNoticias

        .navbar-collapse.collapse.navbar-responsive-collapse.pull-right.header-buttons
          %ul.nav.navbar-nav
            %li
              = text_field_tag 'request', nil, class: 'form-control special_input' , maxlength: "50",id: 'search-textbox'

            - if user_signed_in?
              %li
                %a
                  %i.fa.fa-lg.fa-search{:title => "Buscar",:id => 'search-btn'}            
              %li
                %a{:href=>edit_user_registration_path}
                  %i.fa.fa-lg.fa-user{:title => "Perfil"}
                  =current_user.name
              %li
                %a{:href=>new_post_path}
                  %i.fa.fa-pencil.fa-lg{:title => "Escribir noticia"}
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.fa.fa-power-off.fa-lg{:title => "Salir"} 

            - else
              %li
                %a
                  %i.fa.fa-lg.fa-search{:title => "Buscar",:id => 'search-btn'}
              =render 'login'
                  


    .container.main 
      = yield




    %script{:src => "/assets/home.js" }
    %script{:src => "/assets/post_view.js" }