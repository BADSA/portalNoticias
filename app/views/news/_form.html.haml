= form_for @news do |f|
  - if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :userId
    = f.number_field :userId
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :catId
    = f.number_field :catId
  .field
    = f.label :likes
    = f.number_field :likes
  .actions
    = f.submit 'Save'
